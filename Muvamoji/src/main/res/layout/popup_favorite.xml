<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background"
    android:theme="@style/AppTheme">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:id="@+id/ime_popup_close"
        android:background="@drawable/button_close"
        android:layout_gravity="start"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="1.0">

        <ImageView
            android:layout_width="@dimen/ime_popup_image_size"
            android:layout_height="@dimen/ime_popup_image_size"
            android:scaleType="center"
            android:id="@+id/ime_popup_show_image"
            android:layout_gravity="center_horizontal" />

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/ime_popup_seekBar"
            android:max="100"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:id="@+id/ime_popup_send_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundedbutton" />

    </LinearLayout>
</RelativeLayout>