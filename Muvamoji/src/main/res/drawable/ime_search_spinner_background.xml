<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">
    <item android:state_enabled="false"
        android:drawable="@drawable/ime_search_spinner_background_disabled" />
    <item android:state_pressed="true"
        android:drawable="@drawable/ime_search_spinner_background_pressed" />
    <item android:state_pressed="false" android:state_focused="true"
        android:drawable="@drawable/ime_search_spinner_background_focused" />
    <item android:drawable="@drawable/ime_search_spinner_background_default" />
</selector>
